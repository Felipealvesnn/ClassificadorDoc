@model ClassificadorDoc.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-controller="Classificacao" asp-action="Upload" class="btn btn-sm btn-primary">
                <i class="fas fa-upload"></i> Novo Documento
            </a>
        </div>
    </div>
</div>

<!-- Estatísticas -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Documentos Processados
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Stats.TotalDocuments.ToString("N0")
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="stat-icon bg-primary">
                            <i class="fas fa-file-alt"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Taxa de Sucesso
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Stats.SuccessRate.ToString("F1")%
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="stat-icon bg-success">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Usuários Ativos
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Stats.ActiveUsers</div>
                    </div>
                    <div class="col-auto">
                        <div class="stat-icon bg-info">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Processando
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Stats.ProcessingCount</div>
                    </div>
                    <div class="col-auto">
                        <div class="stat-icon bg-warning">
                            <i class="fas fa-clock"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ações Rápidas -->
<div class="row mb-4">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Ações Rápidas</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6 mb-3">
                        <a asp-controller="Classificacao" asp-action="Upload" class="btn btn-outline-primary w-100">
                            <i class="fas fa-upload fa-2x mb-2"></i><br>
                            Classificar Documento
                        </a>
                    </div>
                    <div class="col-6 mb-3">
                        <a asp-controller="Classificacao" asp-action="Historico" class="btn btn-outline-info w-100">
                            <i class="fas fa-history fa-2x mb-2"></i><br>
                            Ver Histórico
                        </a>
                    </div>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="col-6 mb-3">
                            <a asp-controller="Account" asp-action="UserManagement" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-users-cog fa-2x mb-2"></i><br>
                                Gerenciar Usuários
                            </a>
                        </div>
                        <div class="col-6 mb-3">
                            <a asp-controller="Relatorios" asp-action="Index" class="btn btn-outline-warning w-100">
                                <i class="fas fa-chart-bar fa-2x mb-2"></i><br>
                                Relatórios
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Atividade Recente</h6>
            </div>
            <div class="card-body">
                @if (Model.RecentActivities.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var activity in Model.RecentActivities.Take(4))
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <small class="text-muted">@activity.TimeAgo</small><br>
                                    <strong>@activity.FileName</strong> classificado como <span
                                        class="badge @activity.BadgeClass">@activity.Classification</span>
                                </div>
                                <i class="@activity.IconClass"></i>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-file-alt fa-3x mb-3 text-muted"></i>
                        <p>Nenhuma atividade recente encontrada</p>
                    </div>
                }
                <div class="text-center mt-3">
                    <a asp-controller="Classificacao" asp-action="Historico" class="btn btn-sm btn-outline-primary">
                        Ver Todo Histórico
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Gráfico de Classificações (placeholder) -->
<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Classificações por Tipo (Últimos 30 dias)</h6>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="classificationsChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Tipos Mais Comuns</h6>
            </div>
            <div class="card-body">
                @if (Model.TypeStatistics.Any())
                {
                    @foreach (var stat in Model.TypeStatistics)
                    {
                        <div class="mb-3">
                            <div class="d-flex justify-content-between">
                                <span>@stat.Type</span>
                                <span class="fw-bold">@stat.Percentage.ToString("F1")%</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar @stat.ProgressBarClass"
                                    style="width: @stat.Percentage.ToString("F1")%"></div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-chart-pie fa-3x mb-3 text-muted"></i>
                        <p>Nenhum dado disponível</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Gráfico de classificações com dados dinâmicos
        const ctx = document.getElementById('classificationsChart').getContext('2d');

        // Dados dinâmicos do servidor
        const chartLabels = @Html.Raw(Json.Serialize(Model.ChartData.Labels));
        const chartValues = @Html.Raw(Json.Serialize(Model.ChartData.Values));

        const classificationsChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: chartLabels.length > 0 ? chartLabels : ['Sem dados'],
                datasets: [{
                    label: 'Documentos Classificados',
                    data: chartValues.length > 0 ? chartValues : [0],
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        enabled: chartValues.length > 0
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Atualizar título do gráfico baseado nos dados
        if (chartLabels.length === 0) {
            document.querySelector('.card-header h6').textContent = 'Classificações por Tipo (Nenhum dado disponível)';
        } else {
            document.querySelector('.card-header h6').textContent = 'Classificações por Tipo (Últimos @Model.ChartData.Labels.Count dias)';
        }
    </script>
}
