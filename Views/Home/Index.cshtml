@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-controller="Classificacao" asp-action="Upload" class="btn btn-sm btn-primary">
                <i class="fas fa-upload"></i> Novo Documento
            </a>
        </div>
    </div>
</div>

<!-- Estatísticas -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Documentos Processados
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">1,249</div>
                    </div>
                    <div class="col-auto">
                        <div class="stat-icon bg-primary">
                            <i class="fas fa-file-alt"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Taxa de Sucesso
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">94.2%</div>
                    </div>
                    <div class="col-auto">
                        <div class="stat-icon bg-success">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Usuários Ativos
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">47</div>
                    </div>
                    <div class="col-auto">
                        <div class="stat-icon bg-info">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stat-card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Processando
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">12</div>
                    </div>
                    <div class="col-auto">
                        <div class="stat-icon bg-warning">
                            <i class="fas fa-clock"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ações Rápidas -->
<div class="row mb-4">
    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Ações Rápidas</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6 mb-3">
                        <a asp-controller="Classificacao" asp-action="Upload" class="btn btn-outline-primary w-100">
                            <i class="fas fa-upload fa-2x mb-2"></i><br>
                            Classificar Documento
                        </a>
                    </div>
                    <div class="col-6 mb-3">
                        <a asp-controller="Classificacao" asp-action="Historico" class="btn btn-outline-info w-100">
                            <i class="fas fa-history fa-2x mb-2"></i><br>
                            Ver Histórico
                        </a>
                    </div>
                    @if (User.IsInRole("Administrator"))
                    {
                        <div class="col-6 mb-3">
                            <a asp-controller="Account" asp-action="UserManagement" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-users-cog fa-2x mb-2"></i><br>
                                Gerenciar Usuários
                            </a>
                        </div>
                        <div class="col-6 mb-3">
                            <a asp-controller="Relatorios" asp-action="Index" class="btn btn-outline-warning w-100">
                                <i class="fas fa-chart-bar fa-2x mb-2"></i><br>
                                Relatórios
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Atividade Recente</h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted">Há 5 minutos</small><br>
                            <strong>documento_contrato.pdf</strong> classificado como <span
                                class="badge bg-success">Contrato</span>
                        </div>
                        <i class="fas fa-file-pdf text-danger"></i>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted">Há 15 minutos</small><br>
                            <strong>relatorio_mensal.docx</strong> classificado como <span
                                class="badge bg-info">Relatório</span>
                        </div>
                        <i class="fas fa-file-word text-primary"></i>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted">Há 1 hora</small><br>
                            <strong>nota_fiscal_123.pdf</strong> classificado como <span
                                class="badge bg-warning">Fiscal</span>
                        </div>
                        <i class="fas fa-file-pdf text-danger"></i>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <small class="text-muted">Há 2 horas</small><br>
                            <strong>proposta_comercial.pdf</strong> classificado como <span
                                class="badge bg-primary">Proposta</span>
                        </div>
                        <i class="fas fa-file-pdf text-danger"></i>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a asp-controller="Classificacao" asp-action="Historico" class="btn btn-sm btn-outline-primary">
                        Ver Todo Histórico
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Gráfico de Classificações (placeholder) -->
<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Classificações por Tipo (Últimos 30 dias)</h6>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="classificationsChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Tipos Mais Comuns</h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Contratos</span>
                        <span class="fw-bold">35%</span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-primary" style="width: 35%"></div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Notas Fiscais</span>
                        <span class="fw-bold">28%</span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-success" style="width: 28%"></div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Relatórios</span>
                        <span class="fw-bold">22%</span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-info" style="width: 22%"></div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Propostas</span>
                        <span class="fw-bold">15%</span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-warning" style="width: 15%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Gráfico de classificações
        const ctx = document.getElementById('classificationsChart').getContext('2d');
        const classificationsChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['1 Jan', '5 Jan', '10 Jan', '15 Jan', '20 Jan', '25 Jan', '30 Jan'],
                datasets: [{
                    label: 'Documentos Classificados',
                    data: [12, 19, 8, 15, 22, 18, 25],
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
