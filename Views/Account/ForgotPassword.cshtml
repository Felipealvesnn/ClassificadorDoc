@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Recuperar Senha";
    Layout = "_Layout";
}

<div class="container-fluid vh-100">
    <div class="row h-100">
        <!-- Left Panel - Branding -->
        <div class="col-md-6 d-none d-md-flex forgot-password-left">
            <div class="d-flex flex-column justify-content-center align-items-center text-white h-100 p-5">
                <div class="text-center mb-4">
                    <i class="fas fa-key fa-4x mb-3" style="opacity: 0.9;"></i>
                    <h2 class="fw-bold mb-3">Recuperação de Senha</h2>
                    <p class="fs-5 mb-4">Esqueceu sua senha? Não se preocupe, vamos ajudar você a recuperar o acesso.</p>
                </div>
                
                <div class="text-center">
                    <div class="mb-3">
                        <i class="fas fa-shield-alt fa-2x mb-2" style="opacity: 0.7;"></i>
                        <h5>Segurança Garantida</h5>
                        <p class="small">Processo seguro e criptografado</p>
                    </div>
                    <div class="mb-3">
                        <i class="fas fa-clock fa-2x mb-2" style="opacity: 0.7;"></i>
                        <h5>Rápido e Simples</h5>
                        <p class="small">Recupere sua senha em poucos minutos</p>
                    </div>
                    <div class="mb-3">
                        <i class="fas fa-envelope fa-2x mb-2" style="opacity: 0.7;"></i>
                        <h5>Via E-mail</h5>
                        <p class="small">Link de recuperação enviado por e-mail</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Panel - Forgot Password Form -->
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <div class="forgot-password-form-container">
                <div class="text-center mb-4">
                    <div class="logo-container mb-3">
                        <i class="fas fa-file-alt fa-3x text-primary"></i>
                    </div>
                    <h3 class="fw-bold text-dark mb-2">Recuperar Senha</h3>
                    <p class="text-muted">Digite seu e-mail para receber instruções de recuperação</p>
                </div>

                @if (ViewData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @ViewData["Message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Erro:</strong> Verifique os dados informados.
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-action="ForgotPassword" method="post" id="forgotPasswordForm" novalidate>
                    <div class="mb-4">
                        <label asp-for="Email" class="form-label fw-semibold">
                            <i class="fas fa-envelope me-2 text-primary"></i>E-mail
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="fas fa-at"></i>
                            </span>
                            <input asp-for="Email" 
                                   class="form-control form-control-lg" 
                                   placeholder="Digite seu e-mail"
                                   autocomplete="email"
                                   autofocus>
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                        <div class="invalid-feedback"></div>
                    </div>

                    <div class="d-grid mb-4">
                        <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                            <span id="submitText">
                                <i class="fas fa-paper-plane me-2"></i>Enviar Instruções
                            </span>
                            <span id="submitLoading" class="d-none">
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                Enviando...
                            </span>
                        </button>
                    </div>

                    <div class="text-center">
                        <p class="text-muted mb-3">
                            <i class="fas fa-info-circle me-2"></i>
                            Lembrou da senha?
                        </p>
                        <a asp-action="Login" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Voltar ao Login
                        </a>
                    </div>
                </form>

                <!-- Help Section -->
                <div class="mt-5 p-4 bg-light rounded">
                    <h6 class="fw-bold mb-3">
                        <i class="fas fa-question-circle me-2 text-info"></i>Precisa de Ajuda?
                    </h6>
                    <div class="row">
                        <div class="col-12 mb-3">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-check text-success me-2 mt-1"></i>
                                <div>
                                    <strong>Verifique seu e-mail</strong>
                                    <p class="small text-muted mb-0">Incluindo pasta de spam/lixo eletrônico</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 mb-3">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-clock text-warning me-2 mt-1"></i>
                                <div>
                                    <strong>Link válido por 24 horas</strong>
                                    <p class="small text-muted mb-0">Após esse período, solicite novamente</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex align-items-start">
                                <i class="fas fa-headset text-info me-2 mt-1"></i>
                                <div>
                                    <strong>Suporte Técnico</strong>
                                    <p class="small text-muted mb-0">
                                        Entre em contato: 
                                        <a href="mailto:suporte@empresa.com" class="text-decoration-none">
                                            suporte@empresa.com
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/forgot-password.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/forgot-password.css" />
}
