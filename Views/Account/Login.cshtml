@model LoginViewModel
@{
    ViewData["Title"] = "Acesso ao Sistema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-11 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="login-card">
                <!-- Logo e Branding -->
                <div class="login-header">
                    <div class="company-logo">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h1 class="login-title">Classificador de Documentos</h1>
                    <p class="login-subtitle">Sistema Corporativo de Classificação</p>
                </div>

                <!-- Formulário de Login -->
                <form asp-action="Login" method="post" class="login-form" novalidate autocomplete="on">
                    @Html.AntiForgeryToken()

                    <!-- Mensagens de Erro -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" aria-live="polite">
                    </div>

                    <!-- Campo Email -->
                    <div class="form-group">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope me-2"></i>E-mail Corporativo
                        </label>
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="usuario@empresa.com"
                            autocomplete="email" autofocus aria-describedby="emailHelp" />
                        <span asp-validation-for="Email" class="invalid-feedback" role="alert"></span>
                    </div>

                    <!-- Campo Senha -->
                    <div class="form-group">
                        <label asp-for="Password" class="form-label">
                            <i class="fas fa-key me-2"></i>Senha
                        </label>
                        <div class="password-input-group">
                            <input asp-for="Password" class="form-control form-control-lg"
                                placeholder="Digite sua senha" autocomplete="current-password"
                                aria-describedby="passwordToggle" />
                            <button type="button" class="password-toggle" id="passwordToggle" onclick="togglePassword()"
                                aria-label="Mostrar/ocultar senha">
                                <i class="fas fa-eye" id="togglePasswordIcon" aria-hidden="true"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="invalid-feedback" role="alert"></span>
                    </div>

                    <!-- Opções de Login -->
                    <div class="login-options">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" id="rememberMe" />
                            <label asp-for="RememberMe" class="form-check-label" for="rememberMe">
                                Manter conectado por 30 dias
                            </label>
                        </div>
                    </div>

                    <!-- Botão de Login -->
                    <button type="submit" class="btn btn-primary btn-lg w-100 login-btn">
                        <span class="btn-text">
                            <i class="fas fa-sign-in-alt me-2"></i>Acessar Sistema
                        </span>
                        <span class="btn-spinner d-none">
                            <i class="fas fa-spinner fa-spin me-2"></i>Verificando...
                        </span>
                    </button>
                </form>

                <!-- Links de Suporte -->
                <div class="login-footer">
                    <div class="support-links">
                        <a asp-action="ForgotPassword" class="support-link">
                            <i class="fas fa-question-circle me-1"></i>Esqueci minha senha
                        </a>
                    </div>

                    @if (ViewData["AllowRegistration"]?.ToString() == "true")
                    {
                        <div class="register-section">
                            <span class="text-muted">Novo usuário?</span>
                            <a asp-action="Register" class="register-link">
                                Solicitar acesso
                            </a>
                        </div>
                    }
                </div>

                <!-- Informações de Segurança -->
                <div class="security-notice">
                    <small class="text-muted">
                        <i class="fas fa-lock me-1"></i>
                        Conexão segura e dados criptografados
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/login.js"></script>
}
