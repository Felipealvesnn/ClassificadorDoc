@model UserProfileViewModel
@{
    ViewData["Title"] = "Meu Perfil";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-user-edit me-2 text-primary"></i>Meu Perfil
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Voltar ao Dashboard
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Informações do Perfil -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="fas fa-id-card me-2"></i>Informações Pessoais
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Profile" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FullName" class="form-label">Nome Completo</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-user"></i>
                                </span>
                                <input asp-for="FullName" class="form-control" />
                            </div>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Department" class="form-label">Departamento</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-building"></i>
                                </span>
                                <input asp-for="Department" class="form-control" />
                            </div>
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-mail</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-envelope"></i>
                            </span>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>
                        <div class="form-text">
                            <i class="fas fa-info-circle me-1"></i>
                            O e-mail não pode ser alterado. Entre em contato com o administrador se necessário.
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Salvar Alterações
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Alterar Senha -->
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="fas fa-key me-2"></i>Alterar Senha
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="ChangePassword" method="post" class="needs-validation" novalidate>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="currentPassword" class="form-label">Senha Atual</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input type="password" name="CurrentPassword" class="form-control" required />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordField(this)">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="newPassword" class="form-label">Nova Senha</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-key"></i>
                                </span>
                                <input type="password" name="NewPassword" class="form-control" required />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordField(this)">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <div class="form-text">
                                Mínimo 6 caracteres, incluindo maiúscula, minúscula e número.
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="confirmPassword" class="form-label">Confirmar Nova Senha</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-key"></i>
                                </span>
                                <input type="password" name="ConfirmPassword" class="form-control" required />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordField(this)">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-shield-alt me-2"></i>Alterar Senha
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Estatísticas do Usuário -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-bar me-2"></i>Minhas Estatísticas
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <div class="stat-circle mx-auto mb-2">
                        <i class="fas fa-file-alt"></i>
                    </div>
                    <h3 class="text-primary">@Model.DocumentsProcessed</h3>
                    <p class="text-muted mb-0">Documentos Processados</p>
                </div>

                <hr>

                <div class="row text-center">
                    <div class="col-6">
                        <h5 class="text-success">95%</h5>
                        <small class="text-muted">Taxa de Sucesso</small>
                    </div>
                    <div class="col-6">
                        <h5 class="text-info">@(Model.LastLoginAt?.ToString("dd/MM") ?? "N/A")</h5>
                        <small class="text-muted">Último Acesso</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Informações da Conta -->
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>Informações da Conta
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Tipo de Conta:</strong>
                    <span class="badge bg-primary ms-2">
                        @(User.IsInRole("Administrator") ? "Administrador" : "Usuário")
                    </span>
                </div>

                <div class="mb-3">
                    <strong>Membro desde:</strong>
                    <span class="text-muted">@(Model.CreatedAt.ToString("dd/MM/yyyy"))</span>
                </div>

                <div class="mb-3">
                    <strong>Status:</strong>
                    <span class="badge bg-success">
                        <i class="fas fa-check-circle me-1"></i>Ativo
                    </span>
                </div>

                <div class="alert alert-info">
                    <small>
                        <i class="fas fa-lightbulb me-1"></i>
                        <strong>Dica:</strong> Mantenha suas informações sempre atualizadas para melhor experiência.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        function togglePasswordField(button) {
            const input = button.previousElementSibling;
            const icon = button.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.className = 'fas fa-eye-slash';
            } else {
                input.type = 'password';
                icon.className = 'fas fa-eye';
            }
        }

        // Validação de confirmação de senha
        document.addEventListener('DOMContentLoaded', function() {
            const newPassword = document.querySelector('input[name="NewPassword"]');
            const confirmPassword = document.querySelector('input[name="ConfirmPassword"]');
            
            function validatePasswords() {
                if (confirmPassword.value && newPassword.value !== confirmPassword.value) {
                    confirmPassword.setCustomValidity('As senhas não coincidem');
                } else {
                    confirmPassword.setCustomValidity('');
                }
            }
            
            if (newPassword && confirmPassword) {
                newPassword.addEventListener('input', validatePasswords);
                confirmPassword.addEventListener('input', validatePasswords);
            }
        });
    </script>
}

<style>
.stat-circle {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 2rem;
}
</style>
