@model ClassificadorDoc.Controllers.Mvc.DashboardStatsViewModel
@{
    ViewData["Title"] = "Relatórios - Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-chart-bar me-2 text-primary"></i>Relatórios e Análises
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-action="Exportar" class="btn btn-sm btn-outline-primary">
                <i class="fas fa-download"></i> Exportar Dados
            </a>
        </div>
    </div>
</div>

<!-- Estatísticas Resumidas -->
<div class="row mb-4">
    <div class="col-xl-2 col-md-4 mb-4">
        <div class="card text-center border-primary">
            <div class="card-body">
                <i class="fas fa-users fa-2x text-primary mb-2"></i>
                <h4 class="card-title">@Model.TotalUsers</h4>
                <p class="card-text text-muted">Total Usuários</p>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4 mb-4">
        <div class="card text-center border-success">
            <div class="card-body">
                <i class="fas fa-user-check fa-2x text-success mb-2"></i>
                <h4 class="card-title">@Model.ActiveUsers</h4>
                <p class="card-text text-muted">Usuários Online</p>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4 mb-4">
        <div class="card text-center border-info">
            <div class="card-body">
                <i class="fas fa-file-alt fa-2x text-info mb-2"></i>
                <h4 class="card-title">@Model.TotalDocuments</h4>
                <p class="card-text text-muted">Total Documentos</p>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4 mb-4">
        <div class="card text-center border-warning">
            <div class="card-body">
                <i class="fas fa-calendar-day fa-2x text-warning mb-2"></i>
                <h4 class="card-title">@Model.DocumentsToday</h4>
                <p class="card-text text-muted">Hoje</p>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4 mb-4">
        <div class="card text-center border-secondary">
            <div class="card-body">
                <i class="fas fa-clipboard-list fa-2x text-secondary mb-2"></i>
                <h4 class="card-title">@Model.AuditLogsCount</h4>
                <p class="card-text text-muted">Logs (30d)</p>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4 mb-4">
        <div class="card text-center border-danger">
            <div class="card-body">
                <i class="fas fa-shield-alt fa-2x text-danger mb-2"></i>
                <h4 class="card-title">@Model.SecurityEvents</h4>
                <p class="card-text text-muted">Eventos Segurança</p>
            </div>
        </div>
    </div>
</div>

<!-- Menu de Relatórios -->
<div class="row">
    <div class="col-lg-3 mb-4">
        <div class="card shadow h-100">
            <div class="card-body text-center">
                <i class="fas fa-clipboard-list fa-3x text-primary mb-3"></i>
                <h5 class="card-title">Auditoria</h5>
                <p class="card-text">Logs de acesso, ações e eventos de segurança do sistema.</p>
                <a asp-action="Auditoria" class="btn btn-primary">
                    <i class="fas fa-eye me-2"></i>Ver Relatório
                </a>
            </div>
        </div>
    </div>

    <div class="col-lg-3 mb-4">
        <div class="card shadow h-100">
            <div class="card-body text-center">
                <i class="fas fa-chart-line fa-3x text-success mb-3"></i>
                <h5 class="card-title">Produtividade</h5>
                <p class="card-text">Métricas de produtividade dos usuários por período.</p>
                <a asp-action="Produtividade" class="btn btn-success">
                    <i class="fas fa-chart-bar me-2"></i>Ver Relatório
                </a>
            </div>
        </div>
    </div>

    <div class="col-lg-3 mb-4">
        <div class="card shadow h-100">
            <div class="card-body text-center">
                <i class="fas fa-chart-area fa-3x text-primary mb-3"></i>
                <h5 class="card-title">Gráficos Avançados</h5>
                <p class="card-text">Análise estatística interativa com predições e correlações.</p>
                <a asp-action="GraficosAvancados" class="btn btn-primary">
                    <i class="fas fa-chart-line me-2"></i>Análise Avançada
                </a>
            </div>
        </div>
    </div>

    <div class="col-lg-3 mb-4">
        <div class="card shadow h-100">
            <div class="card-body text-center">
                <i class="fas fa-project-diagram fa-3x text-info mb-3"></i>
                <h5 class="card-title">Modelagem Visual</h5>
                <p class="card-text">Criação de fluxos e análises sem programação - drag & drop.</p>
                <a asp-action="ModelagemVisual" class="btn btn-info">
                    <i class="fas fa-mouse-pointer me-2"></i>Criar Modelo
                </a>
            </div>
        </div>
    </div>

    <div class="col-lg-3 mb-4">
        <div class="card shadow h-100">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x text-info mb-3"></i>
                <h5 class="card-title">Usuários Conectados</h5>
                <p class="card-text">Monitoramento em tempo real de usuários ativos.</p>
                <a asp-action="UsuariosConectados" class="btn btn-info">
                    <i class="fas fa-eye me-2"></i>Ver Relatório
                </a>
            </div>
        </div>
    </div>

    <div class="col-lg-3 mb-4">
        <div class="card shadow h-100">
            <div class="card-body text-center">
                <i class="fas fa-download fa-3x text-warning mb-3"></i>
                <h5 class="card-title">Exportações</h5>
                <p class="card-text">Exportar dados em diversos formatos (CSV, XML, XLSX).</p>
                <a asp-action="Exportar" class="btn btn-warning">
                    <i class="fas fa-download me-2"></i>Exportar Dados
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Gráfico de Atividade -->
<div class="row mt-4">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Atividade do Sistema (Últimos 7 dias)</h6>
            </div>
            <div class="card-body">
                <canvas id="activityChart" width="400" height="200"></canvas>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Resumo Semanal</h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Documentos Processados</span>
                        <span class="fw-bold">245</span>
                    </div>
                    <div class="progress mt-1">
                        <div class="progress-bar bg-primary" style="width: 85%"></div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Logins Únicos</span>
                        <span class="fw-bold">47</span>
                    </div>
                    <div class="progress mt-1">
                        <div class="progress-bar bg-success" style="width: 65%"></div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Taxa de Sucesso</span>
                        <span class="fw-bold">96.2%</span>
                    </div>
                    <div class="progress mt-1">
                        <div class="progress-bar bg-info" style="width: 96%"></div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <span>Eventos de Segurança</span>
                        <span class="fw-bold">3</span>
                    </div>
                    <div class="progress mt-1">
                        <div class="progress-bar bg-warning" style="width: 15%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Gráfico de atividade
        const ctx = document.getElementById('activityChart').getContext('2d');
        const activityChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Segunda', 'Terça', 'Quarta', 'Quinta', 'Sexta', 'Sábado', 'Domingo'],
                datasets: [{
                    label: 'Documentos',
                    data: [45, 52, 38, 47, 63, 18, 22],
                    backgroundColor: 'rgba(54, 162, 235, 0.5)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }, {
                    label: 'Logins',
                    data: [12, 15, 8, 14, 18, 5, 7],
                    backgroundColor: 'rgba(75, 192, 192, 0.5)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
